<h1>All my tasks</h1>

  <% @tasks.each do |task| %>
  <ul>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="fal fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
  </ul>
  <% end %>
<p><%= link_to "Add a new task", "/tasks/new" %></p>




